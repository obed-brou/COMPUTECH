@page
@model COMPUTECH.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Register</h2>

    <!-- Mostrar resumen de validación de errores -->
    <div class="text-danger">
        <span asp-validation-summary="All"></span>
    </div>

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email" class="control-label"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="control-label"></label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="control-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-page="/Account/Login" class="btn btn-secondary">Already have an account? Log in</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
