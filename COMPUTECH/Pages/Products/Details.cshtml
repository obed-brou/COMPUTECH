@page
@model COMPUTECH.Pages.Views.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Details</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.Name" />
        </div>
        <div class="col-md-6">
            <h1>@Model.Product.Name</h1>
            <p class="text-muted">@Model.Product.Description</p>
            <h2 class="text-primary">@Model.Product.Price.ToString("C")</h2>
            <a href="#" class="btn btn-success btn-lg btn-block">Add to Cart</a>
            <a asp-page="./Index" class="btn btn-secondary btn-lg btn-block mt-2">Back to Products</a>
            <a asp-page="./Edit" asp-route-id="@Model.Product.ProductId" class="btn btn-primary btn-lg btn-block mt-2">Edit Product</a>
            <a asp-page="./Delete" asp-route-id="@Model.Product.ProductId" class="btn btn-secondarys btn-lg btn-block mt-2">Delete</a>
        </div>
    </div>
</div>
